@model IEnumerable<WebApplication8.Models.drug>

@{
    Layout = null;
    ViewBag.Title = "Index";
}


<style>
    * {
        -webkit-box-sizing: border-box;
        -moz-box-sizing: border-box;
        box-sizing: border-box;
    }


    ::-webkit-scrollbar {
        width: 15px;
    }

    ::-webkit-scrollbar-track {
        background-color: white;
    }

    ::-webkit-scrollbar-thumb {
        background-color: #0075ff;
    }

        ::-webkit-scrollbar-thumb:hover {
            background-color: #0075ff;
        }

    html {
        scroll-behavior: smooth;
    }

    body {
        margin: 0;
        padding: 0;
        background-color: #F5F5F5;
        background-repeat: no-repeat;
        background-size: 100%;
    }

    a {
        text-decoration: none;
    }

    ul {
        list-style: none;
        margin: 0;
        padding: 0;
    }

    .container {
        padding-left: 15px;
        padding-right: 15px;
        margin-left: auto;
        margin-right: auto;
    }

    .header {
        position: relative;
        
        background-color: white;
        -webkit-box-shadow: 0 0 10px #ddd;
        -moz-box-shadow: 0 0 10px #ddd;
        box-shadow: 0 0 10px #ddd;
    }

        .header .container {
            display: flex;
            justify-content: space-between;
            align-content: center;
            align-items: center;
            flex-wrap: wrap;
            position: relative;
        }

        .header .logo {
            color: #2196f3;
            font-size: 26px;
            font-weight: bold;
            height: 72px;
            display: flex;
            justify-content: center;
            align-content: center;
            align-items: center;
        }

        .header .main-nav {
            display: flex;
        }



            .header .main-nav > li > a {
                display: flex;
                justify-content: center;
                align-items: center;
                height: 72px;
                position: relative;
                color: black;
                padding: 0 30px;
                transition: 0.3s;
                overflow: hidden;
            }



                .header .main-nav > li > a::before {
                    content: "";
                    width: 100%;
                    height: 4px;
                    position: absolute;
                    top: 0;
                    left: -100%;
                    background-color: #2196f3;
                    transition: 0.3s;
                }

                .header .main-nav > li > a:hover {
                    color: #2196f3;
                    background-color: #fafafa;
                }

                    .header .main-nav > li > a:hover::before {
                        left: 0;
                    }
                .header .main-nav > li > .active {
                    color: #2196f3;
                    background-color: #fafafa;
                }

                    .header .main-nav > li > .active::before {
                        left: 0;
                    }


    .form-horizontal {
        padding: 30px 30px;
        
    }

    .content {
        display: flex;
        flex-direction: column;
        gap: 10px;
    }

    .links {
        display: flex;
        flex-direction: column;
    }

    .search {
        border-radius: 6px;
        padding: 5px;
        padding-bottom: 7px;
        padding-left: 7px;
        width: 175px;
        transition: width 0.3s;
        border: none;
        outline: none;
        font-size: 14px;
        font-family: "indie flower", cursive;
        background: #eee;
    }


        .search:focus {
            width: 200px;
        }

            .search:focus::placeholder {
                color: transparent;
            }

    h4 {
        font-size: 1.5rem;
        font-weight: bold;
        margin-top: 5px;
        margin-bottom: 5px;
        color: #000000;
    }

    input[type="submit"] {
        border: none;
        outline: none;
        height: 30px;
        background-color: #0075ff;
        color: #fff;
        font-size: 14px;
        border-radius: 10px;
        font-family: "indie flower", cursive;
        font-weight: bold;
        margin-top: 20px;
        padding: 5px;
        width: 100px;
        flex: 1 0 200px;
        margin: 5px;
    }

        input[type="submit"]:hover {
            opacity: 0.7;
            cursor: pointer;
        }

    .check {
        text-decoration: none;
        border: none;
        outline: none;
        height: 30px;
        background-color: #942080;
        color: #fff;
        font-size: 14px;
        border-radius: 6px;
        font-family: "indie flower", cursive;
        font-weight: bold;
        margin-bottom: 50px;
        padding: 10px;
        width: 100px;
    }

        .check:hover {
            opacity: 0.7;
            cursor: pointer;
        }

    .date {
        display: flex;
        align-items: center;
        margin-bottom: 15px;
        padding-left: 9px;
    }

    label {
        letter-spacing: 0.08em;
        font-size: 16px;
        font-weight: 600;
        margin-left: 5px;
    }

    input[type="radio"] {
        -webkit-appearance: none;
        appearance: none;
    }

    .date label {
        padding-left: 5px;
        cursor: pointer;
        position: relative;
    }

        .date label::before {
            content: "";
            position: absolute;
            top: 50%;
            left: -23px;
            margin-top: -11px;
            width: 18px;
            height: 18px;
            border: 2px solid #888;
            border-radius: 50%;
        }

        .date label::after {
            content: "";
            position: absolute;
            left: -19.5px;
            top: 2px;
            width: 14px;
            height: 14px;
            background-color: #0075ff;
            border-radius: 50%;
            transition: 0.3s;
            transform: scale(0);
        }

    .date input[type="radio"]:checked + label::before {
        border-color: #0075ff;
    }

    .date input[type="radio"]:checked + label::after {
        transform: scale(1);
    }

    .responsive-table {
        overflow-x: auto;
    }

    table {
        width: 100%;
        border-spacing: 0;
    }

        table thead td {
            background-color: #00d1b2;
            font-weight: bold;
        }

        table td {
            padding: 15px;
        }
        table td:last-child {
            width:10%;
            text-align:center;
        }
        table tbody td {
            border-bottom: 1px solid #eee;
            border-left: 1px solid #eee;
            transition: 0.3s;
        }

        table tbody tr td:last-child {
            border-right: 1px solid #eee;
        }

    .detils {
        text-decoration: none;
        border: none;
        outline: none;
        background-color: cadetblue;
        color: #fff;
        font-size: 14px;
        border-radius: 10px;
        font-family: "indie flower", cursive;
        font-weight: bold;
        margin-top: 20px;
        padding: 10px;
    }

        .detils:hover {
            opacity: 0.7;
            background-color: cadetblue;
            cursor: pointer;
        }
</style>

<div class="header">
    <div class="container">

        <a href="#" class="logo">Doctor</a>
        <ul class="main-nav">

            <li>@Html.ActionLink("Search Drug", "Index", null, new { @class = "active" })</li>
            <li>@Html.ActionLink("Check Conflict", "Create")</li>
            <li>@Html.ActionLink("Update Info", "UpdateInfo")</li>
            <li>@Html.ActionLink("Logout", "Logout")</li>


        </ul>

    </div>
</div>

<div class="form-horizontal">
    @using (Html.BeginForm("Index", "drug", FormMethod.Post))
    {

        <div class="content">
            
            <h4> Search Option: </h4>
            <div class="links">
                <div class="date">
                    @Html.RadioButton("option", "TradeName", true, new { id = "TradeName" })
                    @Html.Label("TradeName", htmlAttributes: new { @class = "control-label col-md-2", @for = "TradeName" })
                </div>
                <div class="date">
                    @Html.RadioButton("option", "ScientificName", new { id = "ScientificName" })
                    @Html.Label("ScientificName", htmlAttributes: new { @class = "control-label col-md-2", @for = "ScientificName" })
                </div>
                <div class="date">
                    @Html.RadioButton("option", "effective", new { id = "effective" })
                    @Html.Label("effective", htmlAttributes: new { @class = "control-label col-md-2", @for = "effective" })
                </div>
            </div>
            <div>
                @Html.TextBox("search", null, new { @class = "search", placeholder = "Search" })
                <input type="submit"
                       name="submit"
                       value="Search" />
            </div>
        </div>
    }
    <div class="responsive-table">
        <table class="table">
            <thead>
                <tr>
                    <td>
                        @Html.DisplayNameFor(model => model.TradeName)
                    </td>
                    <td>
                        @Html.DisplayNameFor(model => model.ScientificName)
                    </td>
                    <td>
                        @Html.DisplayNameFor(model => model.SideEffect)
                    </td>
                    <td>
                        @Html.DisplayNameFor(model => model.prescription)
                    </td>
                    <td></td>
                </tr>
            </thead>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.TradeName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ScientificName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SideEffect)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.prescription)
                    </td>
                    <td>

                        @Html.ActionLink("Details", "Details", new { id = item.id }, new { @class = "detils", @id = Html.IdFor(modelItem => item.id) })

                    </td>
                </tr>
            }

        </table>
    </div>
</div>
