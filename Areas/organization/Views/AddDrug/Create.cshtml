
@model WebApplication8.Models.AddDrug

@{
    Layout = null;
    ViewBag.Title = "Create";
}

<style>
    * {
        -webkit-box-sizing: border-box;
        -moz-box-sizing: border-box;
        box-sizing: border-box;
    }


    ::-webkit-scrollbar {
        width: 15px;
    }

    ::-webkit-scrollbar-track {
        background-color: white;
    }

    ::-webkit-scrollbar-thumb {
        background-color: #0075ff;
    }

        ::-webkit-scrollbar-thumb:hover {
            background-color: #0075ff;
        }

    html {
        scroll-behavior: smooth;
    }

    body {
        margin: 0;
        padding: 0;
        background-color: #F5F5F5;
        background-repeat: no-repeat;
        background-size: 100%;
        position: relative;
    }

    a {
        text-decoration: none;
    }

    ul {
        list-style: none;
        margin: 0;
        padding: 0;
    }

    .container {
        padding-left: 5px;
        padding-right: 5px;
        margin-left: auto;
        margin-right: auto;
    }

    .header {
        position: relative;
        background-color: white;
        -webkit-box-shadow: 0 0 10px #ddd;
        -moz-box-shadow: 0 0 10px #ddd;
        box-shadow: 0 0 10px #ddd;
    }

        .header .container {
            display: flex;
            justify-content: space-between;
            align-content: center;
            align-items: center;
            flex-wrap: wrap;
            position: relative;
        }

        .header .logo {
            color: #2196f3;
            font-size: 26px;
            font-weight: bold;
            height: 72px;
            display: flex;
            justify-content: center;
            align-content: center;
            align-items: center;
        }

        .header .main-nav {
            display: flex;
        }



            .header .main-nav > li > a {
                display: flex;
                justify-content: center;
                align-items: center;
                height: 72px;
                position: relative;
                color: black;
                padding: 0 15px;
                transition: 0.3s;
                overflow: hidden;
            }



                .header .main-nav > li > a::before {
                    content: "";
                    width: 100%;
                    height: 4px;
                    position: absolute;
                    top: 0;
                    left: -100%;
                    background-color: #2196f3;
                    transition: 0.3s;
                }

                .header .main-nav > li > a:hover {
                    color: #2196f3;
                    background-color: #fafafa;
                }

                    .header .main-nav > li > a:hover::before {
                        left: 0;
                    }

            .header .main-nav > li > .active {
                color: #2196f3;
                background-color: #fafafa;
            }

                .header .main-nav > li > .active::before {
                    left: 0;
                }

    .form-horizontal {
        margin-top:15px;
        min-width: 500px;
        height: auto;
        background-color: rgba(0,0,0,0.7);
        color: #fff;
        position: absolute;
        left: 50%;
        transform: translateX(-50%);
        box-sizing: border-box;
        padding: 70px 30px;
        box-shadow: 0px 0px 3px black;
        border-radius: 30px;
    }

        .form-horizontal h4 {
            text-align: center;
            margin: 0 auto;
            font-size: 1.5rem;
            font-weight: bold;
            margin-top: 1rem;
            margin-bottom: 1rem;
            color: #fff;
        }

    .form {
        display: flex;
        justify-content: center;
        flex-direction: row;
        flex-wrap: wrap;
        align-items: center;
        margin-top: 50px;
        gap: 10px;
    }

    input {
        border: none;
        border-bottom: 1px solid #fff;
        background: transparent;
        outline: none;
        height: 40px;
        color: #fff;
        font-size: 16px;
        font-family: "indie flower", cursive;
        display:block;
    }

    ::placeholder {
        color: gray;
        font-style: italic;
    }

    input[type="submit"] {
        border: none;
        outline: none;
        height: 40px;
        background-color: #0075ff;
        color: #fff;
        font-size: 14px;
        border-radius: 10px;
        font-family: "indie flower", cursive;
        font-weight: bold;
        margin-top: 20px;
        padding: 5px;
        width: 100px;
        flex: 1 0 200px;
        margin: 5px;
    }

    textarea {
        border: none;
        border-bottom: 1px solid #fff;
        background: transparent;
        outline: none;
        height: 40px;
        color: #fff;
        font-size: 16px;
        font-family: "indie flower", cursive;
    }

    input[type="submit"]:hover {
        opacity: 0.7;
        
        cursor: pointer;
    }

    .detils a {
        border: none;
        outline: none;
        height: 40px;
        background-color: #0075ff;
        color: #fff;
        font-size: 14px;
        border-radius: 10px;
        font-family: "indie flower", cursive;
        font-weight: bold;
        padding: 5px;
        width: 100px;
        flex: 1 0 200px;
        display: flex;
        justify-content: center;
        align-items: center;
    }

        .detils a:hover {
            opacity: 0.7;
            
            cursor: pointer;
        }

    .list-create {
        margin: 10 auto;
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 10px;
    }
    .field-validation-error {
        color: #e80c4d;
        font-weight: bold;
    }

    .field-validation-valid {
        display: none;
    }



    input[type="checkbox"].input-validation-error {
        border: 0 none;
    }

    .validation-summary-errors {
        color: #e80c4d;
        font-weight: bold;
        font-size: 1.1em;
    }
</style>

<div class="header">
    <div class="container">

        <a href="#" class="logo">Organization</a>
        <ul class="main-nav">

            <li>@Html.ActionLink("Home", "Index")</li>
            <li>@Html.ActionLink("Create New", "Create", null, new { @class = "active" })</li>
            <li>@Html.ActionLink("drugs not contains risk", "NotCompleteRisk")</li>
            <li>@Html.ActionLink("drugs not contains effective", "NotCompleteEffe")</li>
            <li>@Html.ActionLink("Accepted Drug", "AcceptedDrug")</li>
            <li>@Html.ActionLink("Change Password", "UpdateInfo")</li>
            <li>@Html.ActionLink("Logout", "Logout")</li>


        </ul>

    </div>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>ADDdrug</h4>
        <hr />
        <div class="form">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">

                <div class="col-md-10">
                    @Html.EditorFor(model => model.drug.TradeName, new { htmlAttributes = new { @class = "form-control", @placeholder = "Trade Name", autofocus = "autofocus" } })
                    @Html.ValidationMessageFor(model => model.drug.TradeName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">

                <div class="col-md-10">
                    @Html.EditorFor(model => model.drug.ScientificName, new { htmlAttributes = new { @class = "form-control", @placeholder = "Scientific Name" } })
                    @Html.ValidationMessageFor(model => model.drug.ScientificName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">

                <div class="col-md-10">
                    @Html.EditorFor(model => model.drug.SideEffect, new { htmlAttributes = new { @class = "form-control", @placeholder = "Side Effect" } })
                    @Html.ValidationMessageFor(model => model.drug.SideEffect, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">

                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.drug.prescription, new { @class = "form-control", @placeholder = "prescription" })
                    @Html.ValidationMessageFor(model => model.drug.prescription, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">

                <div class="col-md-10">
                    @Html.EditorFor(model => model.No_effe, new { htmlAttributes = new { @class = "form-control", @placeholder = "Number Of Effective" } })
                    @Html.ValidationMessageFor(model => model.No_effe, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="list-create">
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Add" class="btn btn-default" />
                </div>
            </div>
            <div>
                <span class="detils">@Html.ActionLink("List", "Index", new { id = (int)Session["org_id"] })</span>
            </div>
        </div>
    </div>
}