
@model WebApplication8.Models.DrugDetails

@{
    Layout = null;
    ViewBag.Title = "Details";
}

<style>
    * {
        -webkit-box-sizing: border-box;
        -moz-box-sizing: border-box;
        box-sizing: border-box;
    }


    ::-webkit-scrollbar {
        width: 15px;
    }

    ::-webkit-scrollbar-track {
        background-color: white;
    }

    ::-webkit-scrollbar-thumb {
        background-color: #0075ff;
    }

        ::-webkit-scrollbar-thumb:hover {
            background-color: #0075ff;
        }

    html {
        scroll-behavior: smooth;
    }

    body {
        margin: 0;
        padding: 0;
        background-repeat: no-repeat;
        background-size: 100%;
        position: relative;
        padding-bottom: 20px;
        background-color: #F5F5F5;
    }

    a {
        text-decoration: none;
    }

    ul {
        list-style: none;
        margin: 0;
        padding: 0;
    }

    .container {
        padding-left: 15px;
        padding-right: 15px;
        margin-left: auto;
        margin-right: auto;
    }

    .header {
        position: relative;
        background-color: white;
        -webkit-box-shadow: 0 0 10px #ddd;
        -moz-box-shadow: 0 0 10px #ddd;
        box-shadow: 0 0 10px #ddd;
    }

        .header .container {
            display: flex;
            justify-content: space-between;
            align-content: center;
            align-items: center;
            flex-wrap: wrap;
            position: relative;
        }

        .header .logo {
            color: #2196f3;
            font-size: 26px;
            font-weight: bold;
            height: 72px;
            display: flex;
            justify-content: center;
            align-content: center;
            align-items: center;
        }

        .header .main-nav {
            display: flex;
        }



            .header .main-nav > li > a {
                display: flex;
                justify-content: center;
                align-items: center;
                height: 72px;
                position: relative;
                color: black;
                padding: 0 30px;
                transition: 0.3s;
                overflow: hidden;
            }



                .header .main-nav > li > a::before {
                    content: "";
                    width: 100%;
                    height: 4px;
                    position: absolute;
                    top: 0;
                    left: -100%;
                    background-color: #2196f3;
                    transition: 0.3s;
                }

                .header .main-nav > li > a:hover {
                    color: #2196f3;
                    background-color: #fafafa;
                }

                    .header .main-nav > li > a:hover::before {
                        left: 0;
                    }

            .header .main-nav > li > .active {
                color: #2196f3;
                background-color: #fafafa;
            }

                .header .main-nav > li > .active::before {
                    left: 0;
                }

    .form-horizontal {
        padding: 30px 30px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        gap: 10px;
    }

        .form-horizontal h4 {
            font-size: 1.5rem;
            font-weight: bold;
            margin-top: 1rem;
            margin-bottom: 0px;
            color: white;
        }

    .content {
        width: 80%;
        padding: 10px;
        background-color: rgba(0, 0, 0, 0.7);
        box-sizing: border-box;
        box-shadow: 0px 0px 3px black;
        border-radius: 7px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        padding: 30px 30px;
    }

    dl {
        display: grid;
        grid-template-columns: repeat(2, auto);
        grid-gap: 10px;
        padding: 5px 0;
    }

    dt, dd {
        width: fit-content;
        margin: 0;
    }

    dt {
        color: #13b6e8;
        font-weight: bold;
        letter-spacing: 0.1em;
        font-size: 20px;
    }

    dd {
        color: white;
        font-weight: 700;
        letter-spacing: 0.08em;
        font-size: 16px;
    }

    .responsive-table {
        overflow-x: auto;
        margin-bottom: 10px;
    }

    table {
        width: 100%;
        border-spacing: 0;
        border-radius: 7px;
    }

        table thead td {
            background-color: #00d1b2;
            font-weight: bold;
        }

        table td {
            padding: 15px;
        }
            table td:last-child {
                width: 15%;
                text-align: center;
            }
        table tbody td {
            border-bottom: 1px solid #eee;
            border-left: 1px solid #eee;
            transition: 0.3s;
        }

        table tbody tr td:last-child {
            border-right: 1px solid #eee;
        }

    .list {
        display: flex;
        flex-direction: row;
        justify-content: flex-start;
        align-items:center;
        gap:20px;
    }

    

        .listlink a {
            min-width: 100px;
            display: flex;
            justify-content: center;
            align-items: center;
        }

    .detils a {
        text-decoration: none;
        border: none;
        outline: none;
        background-color: #942080;
        color: #fff;
        font-size: 14px;
        border-radius: 7px;
        font-family: "indie flower", cursive;
        font-weight: bold;
        margin-bottom: 50px;
        padding: 10px;
        min-width: 100px;
    }

        .detils a:hover {
            opacity: 0.7;
            cursor: pointer;
        }
</style>

<div class="header">
    <div class="container">

        <a href="#" class="logo">Pharmacy</a>
        <ul class="main-nav">

            <li> @Html.ActionLink("List", "Index")</li>
            <li>@Html.ActionLink("Create New", "Create")</li>
            <li>@Html.ActionLink("Logout", "Logout")</li>
            <li>@Html.ActionLink("Search", "Search")</li>



        </ul>

    </div>
</div>

<div class="form-horizontal">
    <div class="content">
        <h4>Drug Details</h4>
        <hr />
        <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => Model.drug.TradeName)
        </dt>

        <dd>
            @Html.DisplayFor(model => Model.drug.TradeName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => Model.drug.ScientificName)
        </dt>

        <dd>
            @Html.DisplayFor(model => Model.drug.ScientificName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => Model.drug.SideEffect)
        </dt>

        <dd>
            @Html.DisplayFor(model => Model.drug.SideEffect)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => Model.drug.prescription)
        </dt>

        <dd>
            @Html.DisplayFor(model => Model.drug.prescription)
        </dd>

        <dt>
            @Html.DisplayName("Name of Organization")
        </dt>

        <dd>
            @Html.DisplayFor(model => Model.drug.orgg.name)
        </dd>

        </dl>

    </div>
    <div class="responsive-table">
        <table class="table">
            <thead>
                <tr>
                    <td>
                        @Html.DisplayName("effective")
                    </td>
                    <td>
                        @Html.DisplayName("conflict")
                    </td>
                    <td>
                        @Html.DisplayName("risk")
                    </td>

                    <td></td>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model.risk_Conflicts)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.conflict.effective.name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.conflict.effective1.name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.risk.name)
                        </td>
                        <td>
                            <span class="detils">@Html.ActionLink("edit", "editt", Session["item"] = item)</span>
                            <span class="detils">@Html.ActionLink("Delete", "DeleteRiskCon", item)</span>
                        </td>

                    </tr>
                }
            </tbody>

        </table>
    </div>
    <div class="list">

        <span class="detils listlink">@Html.ActionLink("accept this drug", "Accept", new { id = Model.drug.id })</span>
        <span class="detils listlink">@Html.ActionLink("edit", "Edit", new { id = Model.drug.id })</span>
        <span class="detils listlink"> @Html.ActionLink("Back to List", "Index", new { id = (int)Session["phar_id"] })</span>
        <span class="detils listlink">@Html.ActionLink("Add Risk Conflict", "AddRiskCon")</span>


    </div>
</div>
