
@model WebApplication8.Models.risk_conflict

@{
    Layout = null;
    ViewBag.Title = "Accept";
}

<style>
    * {
        -webkit-box-sizing: border-box;
        -moz-box-sizing: border-box;
        box-sizing: border-box;
    }


    ::-webkit-scrollbar {
        width: 15px;
    }

    ::-webkit-scrollbar-track {
        background-color: white;
    }

    ::-webkit-scrollbar-thumb {
        background-color: #0075ff;
    }

        ::-webkit-scrollbar-thumb:hover {
            background-color: #0075ff;
        }

    html {
        scroll-behavior: smooth;
    }

    body {
        margin: 0;
        padding: 0;
        background-repeat: no-repeat;
        background-size: 100%;
        background-color: #F5F5F5;
    }

    a {
        text-decoration: none;
    }

    ul {
        list-style: none;
        margin: 0;
        padding: 0;
    }

    .container {
        padding-left: 5px;
        padding-right: 5px;
        margin-left: auto;
        margin-right: auto;
    }

    .header {
        position: relative;
        background-color: white;
        -webkit-box-shadow: 0 0 10px #ddd;
        -moz-box-shadow: 0 0 10px #ddd;
        box-shadow: 0 0 10px #ddd;
    }

        .header .container {
            display: flex;
            justify-content: space-between;
            align-content: center;
            align-items: center;
            flex-wrap: wrap;
            position: relative;
        }

        .header .logo {
            color: #2196f3;
            font-size: 26px;
            font-weight: bold;
            height: 72px;
            display: flex;
            justify-content: center;
            align-content: center;
            align-items: center;
        }

        .header .main-nav {
            display: flex;
        }



            .header .main-nav > li > a {
                display: flex;
                justify-content: center;
                align-items: center;
                height: 72px;
                position: relative;
                color: black;
                padding: 0 15px;
                transition: 0.3s;
                overflow: hidden;
            }



                .header .main-nav > li > a::before {
                    content: "";
                    width: 100%;
                    height: 4px;
                    position: absolute;
                    top: 0;
                    left: -100%;
                    background-color: #2196f3;
                    transition: 0.3s;
                }

                .header .main-nav > li > a:hover {
                    color: #2196f3;
                    background-color: #fafafa;
                }

                    .header .main-nav > li > a:hover::before {
                        left: 0;
                    }

            .header .main-nav > li > .active {
                color: #2196f3;
                background-color: #fafafa;
            }

                .header .main-nav > li > .active::before {
                    left: 0;
                }

    .form-horizontal {
        padding: 10px 30px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        gap: 15px;
    }

        .form-horizontal .title h3 {
            font-size: 30px;
            ;
            font-weight: bold;
            margin-top: 1rem;
            margin-bottom: 0px;
            letter-spacing: 2px;
            color: #e40707;
        }

    .content {
        width: 60%;
        box-sizing: border-box;
        box-shadow: 0px 0px 3px black;
        border-radius: 7px;
        padding: 30px 30px;
    }

    dl {
        display: grid;
        grid-template-columns: repeat(2, auto);
        grid-gap: 10px;
        padding: 5px 0;
    }

    dt, dd {
        width: fit-content;
        margin: 0;
    }

    dt {
        color: #d20a0a;
        letter-spacing: 0.1em;
        font-size: 25px;
        font-weight: bolder;
    }

    dd {
        color: black;
        font-weight: 700;
        letter-spacing: 0.08em;
        font-size: 16px;
    }

    .form-actions {
        display: flex;
        flex-direction: row;
        gap: 20px;
        align-items: center;
    }

    input[type="submit"] {
        border: none;
        outline: none;
        height: 30px;
        background-color: #0075ff;
        color: #fff;
        font-size: 14px;
        border-radius: 10px;
        font-family: "indie flower", cursive;
        font-weight: bold;
        padding: 5px;
        width: 100px;
        margin: 5px;
    }

        input[type="submit"]:hover {
            opacity: 0.7;
            cursor: pointer;
        }

    .detils a {
        border: none;
        outline: none;
        height: 30px;
        background-color: #0075ff;
        color: #fff;
        font-size: 14px;
        border-radius: 10px;
        font-family: "indie flower", cursive;
        font-weight: bold;
        padding: 5px;
        width: 150px;
        margin: 5px;
        display:flex;
        justify-content:center;
        align-items:center;
    }

        .detils a:hover {
            opacity: 0.7;
            cursor: pointer;
        }
</style>

<div class="header">
    <div class="container">

        <a href="#" class="logo">Pharmacy</a>
        <ul class="main-nav">


            <li>@Html.ActionLink("Home", "Index")</li>
            <li>@Html.ActionLink("Add Drug", "Create", "AddDrugs")</li>
            <li>@Html.ActionLink("Waiting Drugs", "Index", "AddDrugs")</li>
            <li>@Html.ActionLink("Search", "Search")</li>
            <li>@Html.ActionLink("drugs not contains risk", "NotCompleteRisk", "AddDrugs")</li>
            <li>@Html.ActionLink("drugs not contains effective", "NotCompleteEffe", "AddDrugs")</li>
            <li>@Html.ActionLink("Change Password", "UpdateInfo")</li>
            <li>@Html.ActionLink("Logout", "Logout")</li>


        </ul>

    </div>
</div>



<div class="form-horizontal">
    <div class="title">
        <h3>Are you sure you want to delete this?</h3>
    </div>
    <div class="content">
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.conflict.effective)
            </dt>

            <dd>
                @Html.DisplayFor(model => Model.conflict.effective.name)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.conflict.effective1.name)
            </dt>

            <dd>
                @Html.DisplayFor(model => Model.conflict.effective1.name)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.risk.name)
            </dt>

            <dd>
                @Html.DisplayFor(model => Model.risk.name)
            </dd>



        </dl>
    </div>
    <div class="form">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" />
            <span class="detils">@Html.ActionLink("Back to Drug", "Details", new { id = (int)Session["drug_id"] })</span>

        </div>
        }
    </div>
</div>


