@model WebApplication8.Models.AddDrug

@{
    Layout = null;
    ViewBag.Title = "AddWait";
}

<style>
    * {
        -webkit-box-sizing: border-box;
        -moz-box-sizing: border-box;
        box-sizing: border-box;
    }


    ::-webkit-scrollbar {
        width: 15px;
    }

    ::-webkit-scrollbar-track {
        background-color: white;
    }

    ::-webkit-scrollbar-thumb {
        background-color: #0075ff;
    }

        ::-webkit-scrollbar-thumb:hover {
            background-color: #0075ff;
        }

    html {
        scroll-behavior: smooth;
    }



    a {
        text-decoration: none;
    }

    ul {
        list-style: none;
        margin: 0;
        padding: 0;
    }
    body {
        margin: 0;
        padding: 0;
        background-color: #F5F5F5;
        background-repeat: no-repeat;
        background-size: 100%;
    }

    .form-horizontal {
        min-width: 500px;
        height: auto;
        background-color: rgba(0,0,0,0.7);
        color: #fff;
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%,-50%);
        box-sizing: border-box;
        padding: 70px 30px;
        box-shadow: 0px 0px 3px black;
        border-radius: 30px;
    }

        .form-horizontal h4 {
            text-align: center;
            margin: 0 auto;
            font-size: 1.5rem;
            font-weight: bold;
            margin-top: 1rem;
            margin-bottom: 1rem;
            color: #fff;
        }

    .form {
        display: flex;
        justify-content: center;
        flex-direction: row;
        flex-wrap: wrap;
        align-items: center;
        margin-top: 50px;
        gap: 10px;
    }

    input {
        border: none;
        border-bottom: 1px solid #fff;
        background: transparent;
        outline: none;
        height: 40px;
        color: #fff;
        font-size: 16px;
        font-family: "indie flower", cursive;
    }

    ::placeholder {
        color: gray;
        font-style: italic;
    }

    input[type="submit"] {
        border: none;
        outline: none;
        height: 40px;
        background-color: #0075ff;
        color: #fff;
        font-size: 14px;
        border-radius: 10px;
        font-family: "indie flower", cursive;
        font-weight: bold;
        margin-top: 20px;
        padding: 5px;
        width: 100px;
        flex: 1 0 200px;
        margin: 5px;
    }

    textarea {
        border: none;
        border-bottom: 1px solid #fff;
        background: transparent;
        outline: none;
        height: 40px;
        color: #fff;
        font-size: 16px;
        font-family: "indie flower", cursive;
    }

    input[type="submit"]:hover {
        opacity: 0.7;
        
        cursor: pointer;
    }

    a {
        text-decoration: none;
        border: none;
        outline: none;
        height: 60px;
        background-color: #0075ff;
        color: #fff;
        font-size: 14px;
        border-radius: 10px;
        font-family: "indie flower", cursive;
        font-weight: bold;
        margin-top: 20px;
        padding: 10px;
        width: 100px;
        flex: 1 0 200px;
    }

        a:hover {
            opacity: 0.7;
            
            cursor: pointer;
        }

    .list-create {
        margin: 10 auto;
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 10px;
    }
</style>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>ADDdrug</h4>
        <hr />
        <div class="form">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">

                <div class="col-md-10">
                    @Html.EditorFor(model => model.drug.TradeName, new { htmlAttributes = new { @class = "form-control", @placeholder = "Trade Name", autofocus = "autofocus" } })
                    @Html.ValidationMessageFor(model => model.drug.TradeName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">

                <div class="col-md-10">
                    @Html.EditorFor(model => model.drug.ScientificName, new { htmlAttributes = new { @class = "form-control", @placeholder = "Scientific Name" } })
                    @Html.ValidationMessageFor(model => model.drug.ScientificName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">

                <div class="col-md-10">
                    @Html.EditorFor(model => model.drug.SideEffect, new { htmlAttributes = new { @class = "form-control", @placeholder = "Side Effect" } })
                    @Html.ValidationMessageFor(model => model.drug.SideEffect, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">

                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.drug.prescription, new { @class = "form-control", @placeholder = "prescription" })
                    @Html.ValidationMessageFor(model => model.drug.prescription, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">

                <div class="col-md-10">
                    @Html.EditorFor(model => model.No_effe, new { htmlAttributes = new { @class = "form-control", @placeholder = "Number Of Effective" } })
                    @Html.ValidationMessageFor(model => model.No_effe, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="list-create">
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
            <div>
                @Html.ActionLink("List", "Index")
            </div>
        </div>
    </div>
}